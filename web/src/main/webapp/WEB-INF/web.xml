<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/jihaoshi</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.mem.Filters.loginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/member/onlyLogin.jsp</url-pattern>

    </filter-mapping>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/member/LoginSuccess.jsp</url-pattern>

    </filter-mapping>
    
    <filter>
        <filter-name>checkoutFilter</filter-name>
        <filter-class>com.testcheckout.Filters.checkoutFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>checkoutFilter</filter-name>
        <url-pattern>/testCart/testCheckout</url-pattern>

    </filter-mapping>
</web-app>
